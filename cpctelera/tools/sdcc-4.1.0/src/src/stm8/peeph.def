	; peephole 21-6 replaced xor by bcpl.
} if notUsed('a'), operandsLiteral(%1), immdInRange(0 65535 '+' 0 %1 %2)

replace restart {
	ld	a, %1
	xor	a, #0x80
	ld	%1, a
} by {
	bcpl	%2, #7
	; peephole 21-7 replaced xor by bcpl.
} if notUsed('a'), operandsLiteral(%1), immdInRange(0 65535 '+' 0 %1 %2)

replace restart {
	rlc	a
	xor	a, #0x01
} by {
	ccf
	; peephole 20a replaced xor by ccf-
	rlc	a
} if notUsed('c')

replace restart {
	clr	a
	and	a, %1
} by {
	clr	a
	; peephole 22 removed redundant and.
} if notVolatile(%1)

replace restart {
	clr	a
	or	a, %1
} by {
	; peephole 22a removed redundant clr a.
	ld	a, %1
}

replace restart {
	clr	a
	or	a, (%1, %2)
} by {
	; peephole 22b removed redundant clr a.
	ld	a, (%1, %2)
}

replace restart {
	tnzw	%1
	jrne	%2
	clrw	%1
} by {
	tnzw	%1
	jrne	%2
	; peephole 22c removed redundant clrw %1.
}

replace restart {
	ldw	%1, (%3, %4)
	jrne	%2
	clrw	%1
} by {
	ldw	%1, (%3, %4)
	jrne	%2
	; peephole 22d removed redundant clrw %1.
}

replace restart {
	and	a, %1
	tnz	a
} by {
	and	a, %1
	; peephole 23 removed redundant tnz.
}

replace restart {
	or	a, %1
	tnz	a
} by {
	or	a, %1
	; peephole 24 removed redundant tnz.
}

replace restart {
