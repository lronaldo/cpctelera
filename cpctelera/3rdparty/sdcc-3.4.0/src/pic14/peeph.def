// peep 2
replace restart {
	movwf	%1
	movf	%1,w
} by {
	;     peep 2 - Removed redundant move
	movwf	%1
} if NZ

// peep 3
replace restart {
	decf	%1,f
	movf	%1,w
	btfss	STATUS,z
	goto	%2
} by {
	;     peep 3 - decf/mov/skpz to decfsz
	decfsz	%1,f
	 goto	%2
}


